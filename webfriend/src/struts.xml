<?xml version="1.0" encoding="UTF-8" ?>
	
	<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- <constant name="struts.i18n.encoding" value="gbk"></constant> -->
	<package name="struts2" extends="struts-default">
		<!--用户注册 -->
		<action name="register" class="useraction">
			<result name="success" type="redirect">/registersuccess.jsp</result>
			<result name="input" type="redirect">/user/register.jsp</result>
		</action>
		<!--用户登录 -->
		<action name="login" class="loginaction">
			<result name="success" type="redirect">/user/main.jsp</result>
			<result name="input" type="redirect">/user/login.jsp</result>
		</action>
		<!--用户退出 -->
		<action name="logout" class="logoutaction">
			<result name="success" type="redirect">/user/login.jsp</result>
		</action>
		<!--用户个人信息 -->
		<action name="checkuser" class="userinfromationaction">
			<result name="success">/manager/deleteUser.jsp</result>
		</action>

		<action name="adduser" class="com.nf.action.AddFriendAction">
			<result name="success" type="redirect">/successaddfriend.jsp</result>
		</action>
		<!--管理员登录 -->
		<action name="adminlogin" class="adminloginaction">
			<result name="success" type="redirect">/manager/adminIndex.jsp</result>
			<result name="input" type="redirect">/manager/login.jsp</result>
		</action>
		<!--查看用户 -->
		<action name="userdisplay" class="userdisplayaction">
			<result name="success" type="dispatcher">/manager/deleteUser.jsp</result>
		</action>
		<!--用户删除 -->
		<action name="userdelete" class="userdeleteaction">
			<result name="success">/manager/deleteUser.jsp</result>
		</action>
		<!--查看所有用户的心情 -->
		<action name="mooddisplay" class="mooddisplayaction">
			<result name="success">/manager/deleteMood.jsp</result>
		</action>

		<!-- 删除用户的心情 -->
		<action name="mooddelete" class="mooddeleteaction">
			<result name="success">/manager/deleteMood.jsp</result>
		</action>
		<!--查找所有评论 -->
		<action name="commentdisplay" class="commentdisplayaction">
			<result name="success">/manager/deleteComment.jsp</result>
		</action>
		<!--删除用户评论 -->
		<action name="commentdelete" class="commentdeleteaction">
			<result name="success">/manager/deleteComment.jsp</result>
		</action>
		<!--查找好友 -->
		<action name="findfriend" class="findfriendaction">
			<result name="success" type="redirect">/user/search.jsp</result>
			<result name="input" type="redirect">/user/search.jsp</result>
		</action>
		<!-- 添加好友 -->
		<action name="addfriend" class="addfriendaction">
			<result name="success" type="redirect">/user/good.jsp</result>
		</action>
		<!--查找个人好友 -->
		<action name="findmyfriend" class="findmyfriendaction">
			<result name="success" type="redirect">/user/friendlist.jsp</result>
			<result name="input">/user/login.jsp</result>
		</action>
		<!--删除个人好友 -->
		<action name="deletefriend" class="frienddeleteaction">
			<result name="success" type="chain">findmyfriend</result>
		</action>


		<!-- jun -->
		<action name="sendmood" class="userAddMoodAction">
			<result name="success" type="redirect">/user/main.jsp</result>
			<result name="login" type="redirect">/user/login.jsp</result>
		</action>
		<action name="addcomment" class="userAddCommentAction">
			<result name="success" type="redirect">/user/main.jsp</result>
			<result name="login" type="redirect">/user/login.jsp</result>
		</action>
		<action name="ajaxdelmood" class="ajaxDeleteMoodAction">
			<result name="login" type="redirect">/user/login.jsp</result>
		</action>
		<action name="ajaxquerymood" class="ajaxQuerySchoolMoodAction">
			<result name="login" type="redirect">/user/login.jsp</result>
		</action>



	</package>
</struts> 